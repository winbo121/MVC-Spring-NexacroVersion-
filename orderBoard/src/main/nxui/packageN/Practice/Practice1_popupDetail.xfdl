        <Combo id="itemCd" taborder="12" text="" left="155" top="240" width="210" height="31" onitemchanged="cbo00_00_onitemchanged" displaynulltext="선택" innerdataset="getParam_searchItems" codecolumn="CD_VAL1" datacolumn="CD_NM1"/>
