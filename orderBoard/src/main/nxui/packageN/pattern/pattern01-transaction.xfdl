<?xml version="1.0" encoding="utf-8"?>
<FDL version="2.1">
  <Form id="Sample001_transaction" classname="Work" inheritanceid="" titletext="기본샘플(조회,입력,저장,삭제)" left="0" width="1050" top="0" height="818" onload="form_onload">
